<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?backgroundColor"
    tools:context=".activities.FeedingTimeSetActivity">

    <include
        android:id="@+id/toolbar_timer_set"
        layout="@layout/toolbar_sensor_details" />

    <TimePicker
        android:id="@+id/pk_feeding_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:theme="@style/Dialog.Theme"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="275dp"
        android:minHeight="50dp"
        android:background="@drawable/background_rounded_button"
        android:textColor="?textColorLight"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:text="Save"
        />

</LinearLayout>