<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aquario">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aquario">
        <activity
            android:name=".activities.FeedingTimeSetActivity"
            android:exported="false"
            android:theme="@style/NoActionBarTheme"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".activities.FishDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FishInformationActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SensorDetailsActivity"
            android:exported="false"
            android:theme="@style/NoActionBarTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.AddAquariumActivity"
            android:exported="false"
            android:theme="@style/NoActionBarTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="true"
            android:theme="@style/NoActionBarTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/NoActionBarTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/NoActionBarTheme"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>